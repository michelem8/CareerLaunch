# CareerLaunch Environment Variables

# OpenAI API key (required for course recommendations)
OPENAI_API_KEY=your_openai_api_key_here

# API Configuration
PORT=3001
NODE_ENV=development  # Set to 'production' in production environment

# CORS Configuration
CORS_ORIGIN=http://localhost:5173  # Comma-separated list of allowed origins

# RAPID API Configuration for LinkedIn data
RAPID_API_KEY=your_rapid_api_key_here
RAPID_API_HOST=linkedin-data-api.p.rapidapi.com

# Database Configuration (if applicable)
# DB_HOST=localhost
# DB_USER=user
# DB_PASSWORD=password
# DB_NAME=careerpathfinder

# Client Configuration
VITE_API_URL=https://www.careerpathfinder.io/api

# Database Configuration (if needed)
DATABASE_URL=your_database_url_here

