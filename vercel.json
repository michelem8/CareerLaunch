{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "builds": [
    { "src": "api/**/*.ts", "use": "@vercel/node" },
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist/public" } }
  ],
  "routes": [
    {
      "src": "/api/cors-test",
      "dest": "/api/cors-test.ts",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/users/me",
      "dest": "/api/users/me.ts",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/survey/roles",
      "dest": "/api/survey/roles.ts",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/resume/analyze",
      "dest": "/api/resume/analyze.ts",
      "methods": ["POST", "OPTIONS"]
    },
    { "src": "/api/(.*)", "dest": "/api/index.ts" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/api/index.ts" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "https://careerpathfinder.io" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization" }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 