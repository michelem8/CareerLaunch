{
  "version": 2,
  "rewrites": [{ "source": "/(.*)", "destination": "/index.html" }],
  "buildCommand": "cd client && npm install && npm run build",
  "outputDirectory": "client/dist",
  "framework": "vite",
  "installCommand": "cd client && npm install",
  "regions": ["iad1"],
  "env": {
    "NODE_VERSION": "20.x"
  },
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/node"
    }
  ]
} 