{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "outDir": "dist",
    "target": "ES2020",
    "lib": ["ES2020"],
    "isolatedModules": true,
    "noEmit": false,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["api/**/*.ts", "server/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"]
} 