{
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm install && npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    { "source": "/api/utils/:path*", "destination": "https://api.careerpathfinder.io/api/utils/:path*" },
    { "source": "/api/ai/:path*", "destination": "https://api.careerpathfinder.io/api/ai/:path*" },
    { "source": "/api/users/:path*", "destination": "https://api.careerpathfinder.io/api/users/:path*" },
    { "source": "/api/resume/:path*", "destination": "https://api.careerpathfinder.io/api/resume/:path*" },
    { "source": "/api/courses/:path*", "destination": "https://api.careerpathfinder.io/api/courses/:path*" },
    { "source": "/api/survey/:path*", "destination": "https://api.careerpathfinder.io/api/survey/:path*" },
    { "source": "/api/skills/:path*", "destination": "https://api.careerpathfinder.io/api/skills/:path*" },
    { "source": "/api/:path*", "destination": "https://api.careerpathfinder.io/api/:path*" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "X-Requested-With, Content-Type, Accept, Authorization" },
        { "key": "Access-Control-Allow-Credentials", "value": "true" }
      ]
    }
  ]
}
